<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

   <RelativeLayout
        android:id="@+id/key_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/black"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/wkey1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/piano_key" />

        <ImageView
            android:id="@+id/wkey2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/wkey1"
            android:layout_toRightOf="@+id/wkey1"
            android:background="@drawable/piano_key" />

        <ImageView
            android:id="@+id/wkey3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/wkey1"
            android:layout_toRightOf="@+id/wkey2"
            android:background="@drawable/piano_key" />

        <ImageView
            android:id="@+id/wkey4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/wkey1"
            android:layout_toRightOf="@+id/wkey3"
            android:background="@drawable/piano_key" />

        <ImageView
            android:id="@+id/wkey5"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/wkey1"
            android:layout_toRightOf="@+id/wkey4"
            android:background="@drawable/piano_key" />

        <ImageView
            android:id="@+id/wkey6"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/wkey1"
            android:layout_toRightOf="@+id/wkey5"
            android:background="@drawable/piano_key" />

        <ImageView
            android:id="@+id/wkey7"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/wkey1"
            android:layout_toRightOf="@+id/wkey6"
            android:background="@drawable/piano_key" />

        <ImageView
            android:id="@+id/bkey1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/wkey1"
            android:layout_marginLeft="50dp"
            android:background="@drawable/black_up" />

        <ImageView
            android:id="@+id/bkey2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/wkey2"
            android:layout_marginLeft="48dp"
            android:background="@drawable/black_up" />

        <ImageView
            android:id="@+id/bkey3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/wkey2"
            android:layout_marginLeft="48dp"
            android:background="@drawable/black_up" />

        <ImageView
            android:id="@+id/bkey4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/wkey2"
            android:layout_marginLeft="48dp"
            android:background="@drawable/black_up" />

        <ImageView
            android:id="@+id/bkey5"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/wkey2"
            android:layout_marginLeft="48dp"
            android:background="@drawable/black_up" />

        <ImageView
            android:id="@+id/bak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/npiano"
            android:layout_alignBottom="@+id/npiano"
            android:layout_marginRight="10dp"
            android:src="@drawable/backward" />

        <ImageView
            android:id="@+id/forw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:layout_alignBottom="@+id/npiano"
            android:layout_toRightOf="@+id/npiano"
            android:layout_marginLeft="10dp"
            android:src="@drawable/forward" />

        <ImageView
            android:id="@+id/nrec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/wkey7"
            android:layout_marginBottom="10dp"
            android:src="@drawable/recordpressed" />
          <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/nrec"
            android:layout_below="@+id/nrec"
            android:text="00:00"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/npiano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/wkey2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/npiano4" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Normal Piano"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textSize="26dp"
            android:textStyle="bold" />

          <TextView
            android:id="@+id/ck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:background="#33aaff"
            android:text="C4"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="24dp" 
            android:textColor="@android:color/black"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"/> 
            
          

        <TextView
            android:id="@+id/ek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/bkey2"
            android:background="#33aaff"
            android:text="E4"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="24dp" 
            android:textColor="@android:color/black"/>

       

        <TextView
            android:id="@+id/dk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
             android:layout_toRightOf="@+id/bkey1"
            android:background="#33aaff"
            android:text="D4"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="24dp" 
            android:textColor="@android:color/black"/>
<TextView
            android:id="@+id/fk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_centerInParent="true"
            android:background="#33aaff"
            android:text="F4"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="24dp"
            android:textColor="@android:color/black" />
<TextView
            android:id="@+id/gk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
             android:layout_toRightOf="@+id/bkey3"
            android:background="#33aaff"
            android:text="G4"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="24dp" 
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/ak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
             android:layout_toRightOf="@+id/bkey4"
            android:background="#33aaff"
            android:text="A4"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="24dp"
            android:textColor="@android:color/black" />

    <TextView
            android:id="@+id/bk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
             android:layout_toRightOf="@+id/bkey5"
            android:background="#33aaff"
            android:text="B4"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="24dp" 
            android:textColor="@android:color/black"/>     

      
        
    </RelativeLayout>

</RelativeLayout>